<table class="flex gap-2">
    <% for(var i=0; i < allElections.length; i++) { %>
        <tr class="col-start-3 col-span-2 w-full">
            <td style="width:5%" class="flex-auto py-4">
                <%= i+1%>.
            </td>
            <td style="width:70%" class="w-full py-4">
                <label class="ml-2 text-xl text-black-600 cursor-pointer"><%= allElections[i].title%></label>
            </td>
                <!--<a href="#" class="ml-2" onclick=`deleteElection(<%= allElections[i].id%>)`>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                    </svg>
                </a>-->
            <% if(allElections[i].started == false) { %>
                <td class="flex-auto">
                    <a href="/elections/manage/<%= allElections[i].id %>" class="text-green-600">
                        Manage
                    </a>
                </td>
                <td class="flex-auto">
                    <a href="/elections/manage/<%= allElections[i].id %>/preview"><button class="bg-green-600 text-white px-5 py-1.5 rounded font-medium mr-2 mb-2 w-24"> Start </button></a>
                </td>
            <% } else if(allElections[i].ended == false) { %>
                <td class="flex-auto">
                    <a href="/elections/manage/<%= allElections[i].id %>" class="text-green-600">
                        Manage
                    </a>
                </td>
                <td class="flex-auto">
                    <button onclick= "changeStatus(<%= allElections[i].id %>)" class="bg-red-600 text-white px-5 py-1.5 rounded font-medium mr-2 mb-2 w-24">End</button>
                </td>
                <td class="flex-auto">
                    <a href="/election/<%= allElections[i].id %>/status/bar" class="text-green-600">
                        Status
                    </a>
                </td>
            <% } else { %>
                <td class="flex-auto">
                    <a href="/election/<%= allElections[i].id %>/status/bar" class="text-green-600">
                        Result
                    </a>
                </td>
                <td class="flex-auto">
                    <button class="bg-slate-300 text-black px-5 py-1.5 rounded font-medium mr-2 mb-2 w-24">Ended</button>
                </td>
                <% } %>
        </tr>
<% } %>
</table>